<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.page">

    <!-- 🌐 Internet + Location Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- 🔔 Notifications (Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- 🗺️ Google Play Services location -->
    <uses-feature android:name="android.hardware.location.gps" android:required="false" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Page"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:resizeableActivity="true"
        android:anyDensity="true"
        android:hardwareAccelerated="true"
        android:largeHeap="true"
        tools:targetApi="34">

        <!-- ✅ Google Maps API Key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <!-- ✅ Launch / Entry Activity -->
        <activity
            android:name=".SelectUserActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ✅ Worker Login -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- ✅ Supervisor / Admin Login -->
        <activity
            android:name=".SupervisorLoginActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- ✅ Worker Dashboard -->
        <activity
            android:name=".DashboardActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- ✅ Admin Dashboard -->
        <activity
            android:name=".AdminDashboardActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- ✅ Profile Page -->
        <activity
            android:name=".ProfileActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- ✅ Admin Profile Page -->
        <activity
            android:name=".AdminProfileActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- ✅ Admin Centers List -->
        <activity
            android:name=".admin.centers.AdminCentersActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- ✅ Add Center -->
        <activity
            android:name=".admin.centers.AddCenterActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- ✅ Edit Center -->
        <activity
            android:name=".admin.centers.EditCenterActivity"
            android:exported="false"
            android.screenOrientation="portrait" />

        <!-- ✅ Center Details (Map integrated) -->
        <activity
            android:name=".admin.centers.CenterDetailsActivity"
            android:exported="false"
            android:theme="@style/Theme.YourApp"
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:hardwareAccelerated="true"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />

        <!-- ✅ Teacher Dashboard -->
        <activity
            android:name=".teacher.TeacherDashboardActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- ➕ Add Teacher -->
        <activity
            android:name=".teacher.AddTeacherActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- ✏️ Edit Teacher -->
        <activity
            android:name=".teacher.EditTeacherActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- 👁️ View Teacher -->
        <activity
            android:name=".teacher.ViewTeacherActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

    </application>
</manifest>
