<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light">

    <!-- MAIN -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <!-- HEADER -->
        <LinearLayout
            android:id="@+id/header_layout"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:background="@drawable/bg_header_gradient"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                android:id="@+id/btn_menu"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/ic_menu"
                android:background="@drawable/bg_circle_translucent"
                android:contentDescription="Menu"
                android:padding="8dp"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/tv_dashboard_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dashboard Overview"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingStart="12dp" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:checkedChip="@id/chip_active">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_active"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Active"
                    android:textColor="@color/white"
                    app:chipIcon="@drawable/ic_check_circle"
                    app:chipIconTint="@color/white"
                    android:layout_marginEnd="8dp"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_inactive"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inactive"
                    android:textColor="@color/white" />

            </com.google.android.material.chip.ChipGroup>

            <ImageButton
                android:id="@+id/btn_refresh"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@android:drawable/ic_popup_sync"
                android:background="@drawable/bg_circle_translucent"
                android:contentDescription="Refresh"
                android:layout_marginStart="10dp"
                app:tint="@color/white" />

            <ImageButton
                android:id="@+id/btn_profile"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/ic_person"
                android:background="@drawable/bg_circle_translucent"
                android:contentDescription="Profile"
                android:layout_marginStart="10dp"
                app:tint="@color/white" />
        </LinearLayout>

        <!-- CARDS ROW -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cards_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/header_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Anganwadi Centers -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_centers"
                android:layout_width="0dp"
                android:layout_height="128dp"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/card_teachers"
                app:layout_constraintWidth_percent="0.48">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp"
                    android:background="@drawable/card_gradient_teal">

                    <TextView
                        android:id="@+id/tv_centers_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Anganwadi Centers (Active)"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/textSecondary"/>

                    <TextView
                        android:id="@+id/tv_centers_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textSize="40sp"
                        android:textStyle="bold"
                        android:layout_below="@id/tv_centers_title"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/tv_total_centers_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Centers (active)"
                        android:textSize="12sp"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/textSecondary"/>

                    <ImageView
                        android:id="@+id/ic_card_home"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_home"
                        android:contentDescription="home"
                        android:padding="14dp"
                        android:background="@drawable/bg_circle_translucent"
                        app:tint="@color/brand_deep"/>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ECCE Teachers -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_teachers"
                android:layout_width="0dp"
                android:layout_height="128dp"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintStart_toEndOf="@id/card_centers"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.48">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp"
                    android:background="@drawable/card_gradient_purple">

                    <TextView
                        android:id="@+id/tv_teachers_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ECCE Teachers (Active)"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/textSecondary"/>

                    <TextView
                        android:id="@+id/tv_teachers_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textSize="40sp"
                        android:textStyle="bold"
                        android:layout_below="@id/tv_teachers_title"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/tv_total_teachers_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Teachers (active)"
                        android:textSize="12sp"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/textSecondary"/>

                    <ImageView
                        android:id="@+id/ic_card_person"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_person"
                        android:contentDescription="person"
                        android:padding="14dp"
                        android:background="@drawable/bg_circle_translucent"
                        app:tint="@color/brand_deep"/>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- EXPANDABLE CONTENT -->
        <FrameLayout
            android:id="@+id/content_area"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/cards_container"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- DRAWER -->
    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/nav_bg">

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            app:headerLayout="@layout/nav_header"
            app:itemIconTint="@android:color/black"
            app:itemTextColor="@android:color/black"
            app:menu="@menu/drawer_menu" />
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>
