<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8FF"
    tools:context=".DashboardActivity">

    <!-- Scrollable content -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavigation"
        android:paddingBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_gradient_blue"
                android:padding="16dp"
                android:elevation="3dp"
                android:clipToOutline="true"
                android:layout_marginBottom="10dp"
                android:backgroundTintMode="src_over">

                <!-- Top user bar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- ðŸ‘¤ Profile Icon -->
                    <ImageView
                        android:id="@+id/profileIcon"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:src="@drawable/ic_person"
                        android:background="@drawable/circle_user_bg"
                        android:padding="10dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="Profile" />

                    <!-- User Info -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Welcome"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/userDetails"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="user@domain.com"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:textSize="17sp"
                            android:maxLines="2"
                            android:ellipsize="end" />
                    </LinearLayout>

                    <!-- ðŸ”” Notifications Icon -->
                    <ImageView
                        android:id="@+id/notificationIcon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_notifications"
                        app:tint="#FFFFFF"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <!-- Feature cards -->
                <LinearLayout
                    android:id="@+id/featureCards"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="18dp"
                    android:gravity="center">

                    <!-- Card 1: Beneficiaries -->
                    <LinearLayout
                        android:id="@+id/card_beneficiaries"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/card_bg"
                        android:padding="16dp"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_people" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Beneficiaries"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#6A5ACD"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="List of all beneficiaries"
                            android:textSize="12sp"
                            android:textColor="#777"
                            android:gravity="center" />
                    </LinearLayout>

                    <!-- Card 2: Tracking -->
                    <LinearLayout
                        android:id="@+id/card_tracking"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/card_bg"
                        android:padding="16dp"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_calendar" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Daily Tracking"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#6A5ACD"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Perform your daily activity"
                            android:textSize="12sp"
                            android:textColor="#777"
                            android:gravity="center" />
                    </LinearLayout>

                    <!-- Card 3: Home Visits -->
                    <LinearLayout
                        android:id="@+id/card_home"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/card_bg"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_home_visit" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Home Visits"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#6A5ACD"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Plan your home visits today"
                            android:textSize="12sp"
                            android:textColor="#777"
                            android:gravity="center" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Action Center -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Action Center"
                android:textColor="#4B0082"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingTop="18dp"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Find Most Used Actions Quickly"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="#666"
                android:paddingBottom="8dp" />

            <!-- Grid buttons -->
            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:layout_margin="16dp"
                android:useDefaultMargins="true">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_person_add" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Register\nBeneficiary"
                        android:gravity="center"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_phone" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Verify\nMobile"
                        android:gravity="center"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_attention" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upcoming\nChanges"
                        android:gravity="center"
                        android:textSize="12sp" />
                </LinearLayout>
            </androidx.gridlayout.widget.GridLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        app:menu="@menu/bottom_nav_menu"
        android:elevation="8dp" />
</RelativeLayout>
