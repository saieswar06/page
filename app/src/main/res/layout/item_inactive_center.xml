<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="5dp"
    android:backgroundTint="#DFF5FF"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp">

        <!-- S.No -->
        <TextView
            android:id="@+id/tv_serial"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#002E46"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <!-- Center Name -->
        <TextView
            android:id="@+id/tv_center_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:text="Center Name"
            android:textColor="#002E46"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Reason -->
        <TextView
            android:id="@+id/tv_reason"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.6"
            android:text="-"
            android:gravity="center"
            android:textColor="#002E46"
            android:textSize="14sp" />

        <!-- Actions -->
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|end"
            android:paddingEnd="8dp">

            <ImageButton
                android:id="@+id/btn_view"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/bg_circle_lightblue"
                app:srcCompat="@drawable/ic_view"
                android:contentDescription="View"
                app:tint="#1CA3C8"
                android:elevation="2dp" />

            <Button
                android:id="@+id/btn_restore"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Restore"
                android:backgroundTint="#AED581"
                android:textColor="#002E46"
                app:icon="@drawable/ic_restore"
                app:iconTint="#002E46" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>