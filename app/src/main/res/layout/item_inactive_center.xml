<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp">

        <TextView
            android:id="@+id/tv_serial"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="@string/inactive_center_serial_number"
            android:textSize="14sp"
            android:textColor="#002E46"/>

        <TextView
            android:id="@+id/tv_center_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="@string/anganwadi_center_name"
            android:textSize="14sp"
            android:textColor="#002E46" />

        <TextView
            android:id="@+id/tv_reason"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/no_reason_provided"
            android:textSize="14sp"
            android:textColor="#555555" />

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btn_view"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_icon_button"
                android:src="@drawable/ic_eye"
                android:scaleType="centerInside"
                android:padding="6dp"
                app:tint="#1CA3C8"
                android:contentDescription="@string/view_button" />

            <ImageButton
                android:id="@+id/btn_history"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_icon_button"
                android:src="@drawable/ic_history"
                android:scaleType="centerInside"
                android:padding="6dp"
                app:tint="#1CA3C8" />

            <Button
                android:id="@+id/btn_restore"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="@string/restore"
                android:gravity="center"
                android:backgroundTint="#4CAF50"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp"
                android:minWidth="0dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
