<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4FF">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tv_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activity Log"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#111" />

        <TextView
            android:id="@+id/tv_header_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recent system activities (latest 10)"
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Main Card Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_container"
        android:layout_below="@id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <!-- RecyclerView for Logs -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvActivityLog"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingBottom="16dp"
                android:visibility="gone" />

            <!-- Progress Bar (centered) -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerInParent="true"
                android:indeterminate="true"
                android:visibility="gone"
                style="?android:attr/progressBarStyleLarge" />

            <!-- No Logs Text -->
            <TextView
                android:id="@+id/tvNoLogs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No activity logs found"
                android:textColor="#777"
                android:textSize="16sp"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:textStyle="italic" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
