<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5FBFF"
    tools:context=".teacher.ViewTeacherActivity">

    <!-- ===== Center Card ===== -->
    <androidx.cardview.widget.CardView
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ===== Header ===== -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/header_layout"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@drawable/gradient_toolbar_poshan"
                android:paddingStart="16dp"
                android:paddingEnd="8dp">

                <TextView
                    android:id="@+id/tv_header_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teacher Details"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <ImageButton
                    android:id="@+id/btn_close_header"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_close"
                    android:tint="@android:color/white"
                    android:contentDescription="Close"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- ===== Scrollable Content ===== -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Name -->
                    <LinearLayout style="@style/DetailRowStyle">
                        <TextView style="@style/DetailLabelStyle" android:text="Name" />
                        <TextView
                            android:id="@+id/view_name"
                            style="@style/DetailValueStyle"
                            android:text="M. Vijay" />
                    </LinearLayout>
                    <View style="@style/DividerStyle" />

                    <!-- Email -->
                    <LinearLayout style="@style/DetailRowStyle">
                        <TextView style="@style/DetailLabelStyle" android:text="Email" />
                        <TextView
                            android:id="@+id/view_email"
                            style="@style/DetailValueStyle"
                            android:text="vijay21@gmail.com" />
                    </LinearLayout>
                    <View style="@style/DividerStyle" />

                    <!-- Phone -->
                    <LinearLayout style="@style/DetailRowStyle">
                        <TextView style="@style/DetailLabelStyle" android:text="Phone" />
                        <TextView
                            android:id="@+id/view_phone"
                            style="@style/DetailValueStyle"
                            android:text="6305961374" />
                    </LinearLayout>
                    <View style="@style/DividerStyle" />

                    <!-- Anganwadi Center -->
                    <LinearLayout style="@style/DetailRowStyle">
                        <TextView style="@style/DetailLabelStyle" android:text="Anganwadi Center" />
                        <TextView
                            android:id="@+id/view_center"
                            style="@style/DetailValueStyle"
                            android:text="Tezu Anganwadi Centre 1" />
                    </LinearLayout>
                    <View style="@style/DividerStyle" />

                    <!-- Center Code -->
                    <LinearLayout style="@style/DetailRowStyle">
                        <TextView style="@style/DetailLabelStyle" android:text="Center Code" />
                        <TextView
                            android:id="@+id/view_center_code"
                            style="@style/DetailValueStyle"
                            android:text="1002" />
                    </LinearLayout>
                    <View style="@style/DividerStyle" />

                    <!-- âœ… Status -->
                    <LinearLayout style="@style/DetailRowStyle">
                        <TextView style="@style/DetailLabelStyle" android:text="Status" />
                        <TextView
                            android:id="@+id/view_status"
                            style="@style/DetailValueStyle"
                            android:text="Active" />
                    </LinearLayout>
                    <View style="@style/DividerStyle" />

                    <!-- Coordinates -->
                    <LinearLayout style="@style/DetailRowStyle">
                        <TextView style="@style/DetailLabelStyle" android:text="Coordinates" />
                        <TextView
                            android:id="@+id/view_coords"
                            style="@style/DetailValueStyle"
                            android:text="27.800395, 94.072753" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

            <!-- ===== Footer Buttons ===== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:padding="16dp"
                android:background="#F9FAFB">

                <Button
                    android:id="@+id/btn_edit_teacher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bg_button_primary"
                    android:minHeight="48dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp"
                    android:elevation="3dp" />

                <Button
                    android:id="@+id/btn_close_teacher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Close"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bg_button_primary"
                    android:minHeight="48dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:textStyle="bold"
                    android:elevation="3dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
