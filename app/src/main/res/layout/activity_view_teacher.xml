<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E9F5FE">

    <!-- Header -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/btn_close_header"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_button_primary"
            android:src="@drawable/ic_close"
            app:tint="@android:color/white"
            android:contentDescription="Close" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teacher Details"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#002E46"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_white_rounded_16dp"
            android:padding="16dp">

            <!-- Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="14sp"
                android:textColor="#888"/>
            <TextView
                android:id="@+id/view_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="John Doe"
                android:textSize="18sp"
                android:textColor="#000"/>

            <!-- Email -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="14sp"
                android:textColor="#888"
                android:layout_marginTop="16dp"/>
            <TextView
                android:id="@+id/view_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="john.doe@example.com"
                android:textSize="18sp"
                android:textColor="#000"/>

            <!-- Phone -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:textSize="14sp"
                android:textColor="#888"
                android:layout_marginTop="16dp"/>
            <TextView
                android:id="@+id/view_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="+1 234 567 890"
                android:textSize="18sp"
                android:textColor="#000"/>

            <!-- Center Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anganwadi Center"
                android:textSize="14sp"
                android:textColor="#888"
                android:layout_marginTop="16dp"/>
            <TextView
                android:id="@+id/view_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Example Center"
                android:textSize="18sp"
                android:textColor="#000"/>

            <!-- Center Code -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Center Code"
                android:textSize="14sp"
                android:textColor="#888"
                android:layout_marginTop="16dp"/>
            <TextView
                android:id="@+id/view_center_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="12345"
                android:textSize="18sp"
                android:textColor="#000"/>

            <!-- State -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="State"
                android:textSize="14sp"
                android:textColor="#888"
                android:layout_marginTop="16dp"/>
            <TextView
                android:id="@+id/view_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="State Name"
                android:textSize="18sp"
                android:textColor="#000"/>

            <!-- District -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="District"
                android:textSize="14sp"
                android:textColor="#888"
                android:layout_marginTop="16dp"/>
            <TextView
                android:id="@+id/view_district"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="District Name"
                android:textSize="18sp"
                android:textColor="#000"/>

            <!-- Mandal -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mandal"
                android:textSize="14sp"
                android:textColor="#888"
                android:layout_marginTop="16dp"/>
            <TextView
                android:id="@+id/view_mandal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Mandal Name"
                android:textSize="18sp"
                android:textColor="#000"/>

            <!-- Locality -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Locality"
                android:textSize="14sp"
                android:textColor="#888"
                android:layout_marginTop="16dp"/>
            <TextView
                android:id="@+id/view_locality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Locality Name"
                android:textSize="18sp"
                android:textColor="#000"/>

            <!-- Coordinates -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coordinates"
                android:textSize="14sp"
                android:textColor="#888"
                android:layout_marginTop="16dp"/>
            <TextView
                android:id="@+id/view_coords"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="12.345, 67.890"
                android:textSize="18sp"
                android:textColor="#000"/>

            <!-- Status -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textSize="14sp"
                android:textColor="#888"
                android:layout_marginTop="16dp"/>
            <TextView
                android:id="@+id/view_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Active"
                android:textSize="18sp"
                android:textColor="#000"/>

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp">

                <Button
                    android:id="@+id/btn_close_teacher"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Close"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/btn_edit_teacher"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Edit"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
