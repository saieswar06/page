<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp">

        <TextView
            android:id="@+id/tv_serial"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="14sp"
            android:textColor="#002E46"/>

        <TextView
            android:id="@+id/tv_center_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Anganwadi Center Name"
            android:textSize="14sp"
            android:textColor="#002E46" />

        <TextView
            android:id="@+id/tv_teacher_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:text="0"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="#555555" />

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btn_view"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_icon_button"
                android:src="@drawable/ic_eye"
                android:scaleType="centerInside"
                android:padding="6dp"
                app:tint="#1CA3C8" />

            <ImageButton
                android:id="@+id/btn_edit"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_icon_button"
                android:src="@drawable/ic_edit"
                android:scaleType="centerInside"
                android:padding="6dp"
                app:tint="#1CA3C8" />

            <ImageButton
                android:id="@+id/btn_deactivate"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_icon_button"
                android:src="@drawable/ic_block"
                android:scaleType="centerInside"
                android:padding="6dp"
                app:tint="#FFA500" />

            <ImageButton
                android:id="@+id/btn_delete"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_icon_button"
                android:src="@drawable/ic_delete"
                android:scaleType="centerInside"
                android:padding="6dp"
                app:tint="#E63946" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
