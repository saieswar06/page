<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundLight"
    tools:context=".teacher.EditTeacherActivity">

    <!-- Centered Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- HEADER -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@drawable/gradient_header"
                android:paddingStart="16dp"
                android:paddingEnd="8dp">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit ECCE Teacher"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageButton
                    android:id="@+id/btn_close_edit"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_close"
                    android:background="@android:color/transparent"
                    android:contentDescription="Close"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:tint="@android:color/white" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- FORM -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Name -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Name *"
                        app:boxBackgroundMode="filled"
                        app:boxBackgroundColor="#F2F6F9"
                        app:boxStrokeColor="@color/primaryMedium"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp"
                            android:textColor="@color/textPrimary"
                            android:inputType="textPersonName"
                            android:background="@android:color/transparent"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <View android:layout_width="match_parent" android:layout_height="12dp"/>

                    <!-- Email -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email (Optional)"
                        app:boxBackgroundMode="filled"
                        app:boxBackgroundColor="#F2F6F9"
                        app:boxStrokeColor="@color/primaryMedium"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp"
                            android:textColor="@color/textPrimary"
                            android:inputType="textEmailAddress"
                            android:background="@android:color/transparent"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <View android:layout_width="match_parent" android:layout_height="12dp"/>

                    <!-- Phone -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Phone Number *"
                        app:boxBackgroundMode="filled"
                        app:boxBackgroundColor="#F2F6F9"
                        app:boxStrokeColor="@color/primaryMedium"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp"
                            android:textColor="@color/textPrimary"
                            android:inputType="phone"
                            android:background="@android:color/transparent"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <View android:layout_width="match_parent" android:layout_height="12dp"/>

                    <!-- Password -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Default Password"
                        app:boxBackgroundMode="filled"
                        app:boxBackgroundColor="#F2F6F9"
                        app:boxStrokeColor="@color/primaryMedium"
                        app:endIconMode="password_toggle"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp"
                            android:textColor="@color/textPrimary"
                            android:inputType="textPassword"
                            android:background="@android:color/transparent"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <View android:layout_width="match_parent" android:layout_height="12dp"/>

                    <!-- Center Dropdown -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layout_center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundMode="filled"
                            app:boxBackgroundColor="#F2F6F9"
                            app:boxStrokeColor="@color/primaryMedium"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusBottomEnd="12dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/spinner_center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:focusable="false"
                                android:clickable="true"
                                android:hint="Select Center"
                                android:textColor="@color/textPrimary"
                                android:textSize="16sp"
                                android:paddingStart="12dp"
                                android:paddingEnd="48dp"
                                android:background="@android:color/transparent"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Manual dropdown icon -->
                        <ImageView
                            android:id="@+id/icon_dropdown"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="16dp"
                            android:src="@drawable/ic_arrow_drop_down"/>
                    </RelativeLayout>

                    <View android:layout_width="match_parent" android:layout_height="20dp"/>

                    <!-- Update Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_save_teacher"
                        android:layout_width="200dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:text="Update Teacher"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:background="@drawable/bg_button_primary"
                        app:backgroundTint="@null"
                        app:strokeWidth="0dp" />


                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
