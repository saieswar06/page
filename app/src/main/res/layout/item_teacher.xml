<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="5dp"
    android:backgroundTint="#DFF5FF"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- S.No -->
        <TextView
            android:id="@+id/tv_serial"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="1"
            android:textColor="#002E46"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <!-- Name -->
        <TextView
            android:id="@+id/tv_teacher_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:layout_marginStart="8dp"
            android:text="Teacher Name"
            android:textColor="#002E46"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"/>

        <!-- Email -->
        <TextView
            android:id="@+id/tv_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginStart="8dp"
            android:text="teacher@example.com"
            android:textColor="#1CA3C8"
            android:textSize="14sp"/>

        <!-- Phone -->
        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:layout_marginStart="8dp"
            android:text="9999999999"
            android:textColor="#004C66"
            android:textSize="14sp"/>

        <!-- Center Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_marginStart="8dp">

            <TextView
                android:id="@+id/tv_center_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tezu Anganwadi Centre 1"
                android:textColor="#1CA3C8"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_center_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Code: 1002"
                android:textColor="#4D6E7F"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- Actions -->
        <LinearLayout
            android:id="@+id/actions_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="8dp"
            android:gravity="end">

            <ImageButton
                android:id="@+id/btn_view"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/bg_circle_lightblue"
                app:srcCompat="@drawable/ic_view"
                android:contentDescription="View"
                app:tint="#1CA3C8"
                android:elevation="2dp" />

            <ImageButton
                android:id="@+id/btn_edit"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/bg_circle_lightblue"
                app:srcCompat="@drawable/ic_edit"
                android:contentDescription="Edit"
                app:tint="#1CA3C8"
                android:elevation="2dp" />

            <ImageButton
                android:id="@+id/btn_delete"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/bg_circle_lightblue"
                app:srcCompat="@drawable/ic_delete"
                android:contentDescription="Delete"
                app:tint="#E63946"
                android:elevation="2dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
