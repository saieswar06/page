<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundLight"
    tools:context=".teacher.AddTeacherActivity">

    <!-- Centered Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- HEADER -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@drawable/gradient_header"
                android:paddingStart="16dp"
                android:paddingEnd="8dp">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add ECCE Teacher"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageButton
                    android:id="@+id/btn_close_add"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_close"
                    android:tint="@android:color/white"
                    android:background="@android:color/transparent"
                    android:contentDescription="Close"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:ignore="UseAppTint" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- FORM -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Name -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" *"
                            android:textColor="#FF0000"/>
                    </LinearLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxBackgroundMode="filled"
                        app:boxBackgroundColor="#F2F6F9"
                        app:boxStrokeColor="@color/primaryMedium"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp"
                            android:hint="Enter Name"
                            android:textColor="@color/textPrimary"
                            android:inputType="textPersonName"
                            android:background="@android:color/transparent"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <View android:layout_width="match_parent" android:layout_height="12dp"/>

                    <!-- Email -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxBackgroundMode="filled"
                        app:boxBackgroundColor="#F2F6F9"
                        app:boxStrokeColor="@color/primaryMedium"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp"
                            android:hint="Enter Email"
                            android:textColor="@color/textPrimary"
                            android:inputType="textEmailAddress"
                            android:background="@android:color/transparent"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <View android:layout_width="match_parent" android:layout_height="12dp"/>

                    <!-- Phone -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phone Number"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" *"
                            android:textColor="#FF0000"/>
                    </LinearLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxBackgroundMode="filled"
                        app:boxBackgroundColor="#F2F6F9"
                        app:boxStrokeColor="@color/primaryMedium"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp"
                            android:hint="Enter Phone Number"
                            android:textColor="@color/textPrimary"
                            android:inputType="phone"
                            android:background="@android:color/transparent"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <View android:layout_width="match_parent" android:layout_height="12dp"/>

                    <!-- Password -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Default Password"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" *"
                            android:textColor="#FF0000"/>
                    </LinearLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxBackgroundMode="filled"
                        app:boxBackgroundColor="#F2F6F9"
                        app:boxStrokeColor="@color/primaryMedium"
                        app:endIconMode="password_toggle"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp"
                            android:hint="Enter Password"
                            android:textColor="@color/textPrimary"
                            android:inputType="textPassword"
                            android:background="@android:color/transparent"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <View android:layout_width="match_parent" android:layout_height="12dp"/>

                    <!-- Select Center Dropdown -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Select Center"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" *"
                            android:textColor="#FF0000"/>
                    </LinearLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_center"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView
                            android:id="@+id/spinner_center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <View android:layout_width="match_parent" android:layout_height="12dp"/>

                    <!-- Center Details Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_center_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#E3F2FD"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Center Details"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#002E46"/>

                            <GridLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:columnCount="2"
                                android:layout_marginTop="12dp">

                                <TextView android:text="Center Name:" android:layout_gravity="start" android:layout_columnWeight="1" android:textColor="#004C66"/>
                                <TextView android:id="@+id/tv_detail_center_name" android:text="-" android:layout_gravity="start" android:layout_columnWeight="1" android:textStyle="bold" android:textColor="#002E46"/>

                                <TextView android:text="Center Code:" android:layout_marginTop="8dp" android:layout_gravity="start" android:layout_columnWeight="1" android:textColor="#004C66"/>
                                <TextView android:id="@+id/tv_detail_center_code" android:text="-" android:layout_marginTop="8dp" android:layout_gravity="start" android:layout_columnWeight="1" android:textStyle="bold" android:textColor="#002E46"/>

                                <TextView android:text="State:" android:layout_marginTop="8dp" android:layout_gravity="start" android:layout_columnWeight="1" android:textColor="#004C66"/>
                                <TextView android:id="@+id/tv_detail_state" android:text="-" android:layout_marginTop="8dp" android:layout_gravity="start" android:layout_columnWeight="1" android:textStyle="bold" android:textColor="#002E46"/>

                                <TextView android:text="District:" android:layout_marginTop="8dp" android:layout_gravity="start" android:layout_columnWeight="1" android:textColor="#004C66"/>
                                <TextView android:id="@+id/tv_detail_district" android:text="-" android:layout_marginTop="8dp" android:layout_gravity="start" android:layout_columnWeight="1" android:textStyle="bold" android:textColor="#002E46"/>

                                <TextView android:text="Mandal:" android:layout_marginTop="8dp" android:layout_gravity="start" android:layout_columnWeight="1" android:textColor="#004C66"/>
                                <TextView android:id="@+id/tv_detail_mandal" android:text="-" android:layout_marginTop="8dp" android:layout_gravity="start" android:layout_columnWeight="1" android:textStyle="bold" android:textColor="#002E46"/>

                                <TextView android:text="Locality:" android:layout_marginTop="8dp" android:layout_gravity="start" android:layout_columnWeight="1" android:textColor="#004C66"/>
                                <TextView android:id="@+id/tv_detail_locality" android:text="-" android:layout_marginTop="8dp" android:layout_gravity="start" android:layout_columnWeight="1" android:textStyle="bold" android_textColor="#002E46"/>

                            </GridLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <View android:layout_width="match_parent" android:layout_height="20dp"/>

                    <!-- Save Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_save_teacher"
                        android:layout_width="200dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:text="Save Teacher"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:background="@drawable/bg_button_primary"
                        app:backgroundTint="@null"
                        app:strokeWidth="0dp" />

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
